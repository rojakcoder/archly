    "publish": "npm run prepublish && npm publish",
    "test": "jest --config scripts/jest.config.js",
    "test-coverage": "jest --coverage --config scripts/jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rojakcoder/archly.git"
