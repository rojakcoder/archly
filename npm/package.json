{
  "name": "archly",
  "version": "0.8.1",
  "description": "Archly is a library for creating a hierarchy-based access control list (ACL).",
  "main": "dist/archly.common.min.js",
  "unpkg": "dist/archly.browser.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c scripts/rollup.config.js",
